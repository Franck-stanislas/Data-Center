{% extends 'base.html.twig' %}

{% block title 'Liste de projets' %}

{% block body %}

    <div class="breadcrumbs">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="breadcrumbs-content">
                        <h1 class="page-title">Projets</h1>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-12">
                    <ul class="breadcrumb-nav">
                        <li><a href="{{ path('app_index') }}">Home</a></li>
                        <li>Liste de projet</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


    <section class="category-page section">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-4 col-12">
                    <div class="category-sidebar">
                        <div class="single-widget search">
                            <h3>Rechercher</h3>
                            <form action="#">
                                <input type="text" placeholder="Rechercher Ici...">
                                <button type="submit"><i class="lni lni-search-alt"></i></button>
                            </form>
                        </div>

                        <div class="single-widget">
                            <h3>Toutes les categories</h3>
                            <ul class="list">
                                {% if categories|length > 0%}
                                    {% for categorie in categories%}
                                        <li>
                                            <a href="javascript:void(0)"> {{categorie.nomCategorie}}<span>{{ categorie.projet | length }}</span></a>
                                        </li>
                                    {% endfor%}
                                {% endif%}
                            </ul>
                        </div>

                    </div>
                </div>
                <div class="col-lg-9 col-md-8 col-12">
                    <div class="category-grid-list">
                        <div class="row">
                            <div class="col-12">
                                <div class="category-grid-topbar">
                                    {% if statuts|length > 0%}
                                        <h3 class="mt-3" style="font-size: 18px; font-weight: 600; display: block;">Statut du projet</h3>
                                        <nav class="list-nav mt-4">
                                            <ul>
                                                {% for statut in statuts%}
                                                    <li class="active m-3"><a href="javascript:void(0)">{{ statut.nom }} <span>{{statut.projet |length}}</span></a></li>
                                                {% endfor%}
                                            </ul>
                                        </nav>
                                    {% endif%}
                                    <div class="row align-items-center">
                                        <div class="col-lg-6 col-md-6 col-12">
                                            <h3 class="title">Showing 1-12 of 21 ads found</h3>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-12">
                                            <nav>
                                                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                                    <button class="nav-link active" id="nav-grid-tab" data-bs-toggle="tab" data-bs-target="#nav-grid" type="button" role="tab" aria-controls="nav-grid" aria-selected="true"><i class="lni lni-grid-alt"></i></button>
                                                    <button class="nav-link" id="nav-list-tab" data-bs-toggle="tab" data-bs-target="#nav-list" type="button" role="tab" aria-controls="nav-list" aria-selected="false"><i class="lni lni-list"></i></button>
                                                </div>
                                            </nav>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-content" id="nav-tabContent">
                                    <div class="tab-pane fade show active" id="nav-grid" role="tabpanel" aria-labelledby="nav-grid-tab">
                                        <div class="row">
                                            {% if projets|length > 0%}
                                                {% for projet in projets%}
                                                    <div class="col-lg-4 col-md-6 col-12">
                                                        <div class="single-item-grid">
                                                            <div class="content">
                                                                <a href="javascript:void(0)" class="tag">
                                                                    {{ projet.secteur.nomCategorie }}
                                                                </a>
                                                                <h3 class="title">
                                                                    <a href="item-details.html">{{ projet.institule }}</a>
                                                                </h3>
                                                                <p class="location">
                                                                    <a href="javascript:void(0)">
                                                                        <i class="lni lni-map-marker"></i>
                                                                        {{projet.arrondissement.ville}}
                                                                    </a>
                                                                </p>
                                                                <ul class="info">
                                                                    <span>Estimation du cout</span>
                                                                    <li class="price">{{ projet.couts }} FCFA</li>

                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            {% else%}
                                                <span class="text-danger text-center">Aucun projet disponible pour le moment</span>
                                            {% endif%}
                                        </div>
                                        <div class="row">
                                            <div class="col-12">

                                                <div class="pagination left">
                                                    <ul class="pagination-list">
                                                        <li><a href="javascript:void(0)">1</a></li>
                                                        <li class="active"><a href="javascript:void(0)">2</a></li>
                                                        <li><a href="javascript:void(0)">3</a></li>
                                                        <li><a href="javascript:void(0)">4</a></li>
                                                        <li><a href="javascript:void(0)"><i class="lni lni-chevron-right"></i></a></li>
                                                    </ul>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="nav-list" role="tabpanel" aria-labelledby="nav-list-tab">
                                        <div class="row">
                                            {% if projets|length > 0%}
                                                {% for projet in projets%}
                                                <div class="col-lg-12 col-md-12 col-12">
                                                    <div class="single-item-grid">
                                                        <div class="row align-items-center">
                                                            <div class="col-lg-7 col-md-5 col-12">
                                                                <div class="content">
                                                                    <a href="javascript:void(0)" class="tag">{{ projet.secteur.nomCategorie }}</a>
                                                                    <div class="d-inline-flex justify-content-between">
                                                                        <h3 class="title me-5">
                                                                            <a href="item-details.html">{{projet.institule}}</a>
                                                                        </h3>
                                                                        <p class="location me-5">
                                                                            <a href="javascript:void(0)">
                                                                                <i class="lni lni-map-marker"></i>
                                                                                {{projet.arrondissement.ville}}
                                                                            </a>
                                                                        </p>
                                                                        <ul class="info">
                                                                            <span>Estimation du cout</span>
                                                                            <li class="price">{{ projet.couts }} FCFA</li>
                                                                        </ul>
                                                                    </div>

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                                {% endfor %}
                                            {% else%}
                                                <span class="text-danger text-center">Aucun projet disponible pour le moment</span>
                                            {% endif%}
                                        </div>
                                        <div class="row">
                                            <div class="col-12">

                                                <div class="pagination left">
                                                    <ul class="pagination-list">
                                                        <li><a href="javascript:void(0)">1</a></li>
                                                        <li class="active"><a href="javascript:void(0)">2</a></li>
                                                        <li><a href="javascript:void(0)">3</a></li>
                                                        <li><a href="javascript:void(0)">4</a></li>
                                                        <li><a href="javascript:void(0)"><i class="lni lni-chevron-right"></i></a></li>
                                                    </ul>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
