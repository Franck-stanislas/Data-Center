{% extends 'base.html.twig' %}

{% block title 'Accueil' %}

{% block body %}

    <!-- Start Hero Area -->
    <section class="hero-area overlay">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 offset-lg-1 col-md-12 col-12">
                    <div class="hero-text text-center">
                        <!-- Start Hero Text -->
                        <div class="section-heading">
                            <h2 class="wow fadeInUp" data-wow-delay=".3s">BANQUE DE DONNEES DES CTD</h2>
                            <p class="wow fadeInUp" data-wow-delay=".5s">
                                Plateforme d'enregistement des projets de developpement des CTD <br> et de publication à l'endroit des potentiels investisseurs.
                            </p>
                        </div>
                        <!-- End Hero Text -->

                        <!-- Start Search Form -->
                        {{ form_start(form)}}
                        <div class="search-form wow fadeInUp" data-wow-delay=".7s">
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-12 p-0">
                                    <div class="search-input">
                                        <label for="keyword"><i class="lni lni-search-alt theme-color"></i></label>
{#                                        <input type="text" name="keyword" id="keyword" placeholder="Mot clé">#}
                                   {{form_widget(form.mot)}}
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-12 p-0">
                                    <div class="search-input">
                                        <label for="category"><i class="lni lni-grid-alt theme-color"></i></label>
                                        {{form_widget(form.maturites)}}
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-12 p-0">
                                    <div class="search-input">
                                        <label for="category"><i class="lni lni-grid-alt theme-color"></i></label>
                                        {{form_widget(form.categories, { 'id': 'location' })}}
                                    </div>
                                </div>
                                <div class="col-lg-2 col-md-2 col-12 p-0">
                                    <div class="search-btn button">
                                        <button class="btn"><i class="lni lni-search-alt"></i> Chercher </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{ form_end(form)}}
                        <!-- End Search Form -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Hero Area -->

    <!-- Start Categories Area -->
    <section class="categories">
        <div class="container">
            <div class="cat-inner">
                <div class="row">
                    <div class="col-12 p-0">
                        <div class="category-slider">
                            {% for categorie in categories%}
                            <!-- Start Single Category -->
                            <a href="{{ path('app_category_detail', {'id':categorie.id}) }}" class="single-cat">
                                <div class="icon">
                                    <img src="{{ vich_uploader_asset(categorie, 'iconeFile') }}" alt="{{ categorie.iconeName }}">

                                </div>
                                <h3>{{ categorie.nomCategorie}}</h3>
                                <h5 class="total">{{ categorie.projet | length }}</h5>
                            </a>
                            <!-- End Single Category -->
                            {% endfor%}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /End Categories Area -->

    <!-- Start Items Grid Area -->
    <section class="items-grid section custom-padding">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title">
                        <h2 class="wow fadeInUp" data-wow-delay=".4s">Recents Projets</h2>
                        <p class="wow fadeInUp" data-wow-delay=".6s">Recents projets de developpement repertoriés du territoire camerounais.</p>
                    </div>
                </div>
            </div>
            {% if projets|length > 0%}
                {% for row in projets|batch(9)%}
                    <div class="single-head">
                        <div class="row">
                            {% for projet in row%}
                                <div class="col-lg-4 col-md-6 col-12">
                                        <!-- Start Single Grid -->
                                        <div class="single-grid wow fadeInUp" data-wow-delay=".2s">
                                            <div class="content">
                                                <div class="top-content">
                                                    <a href="{{ path('app_category_detail', {'id':projet.secteur.id}) }}" class="tag">{{ projet.secteur.nomCategorie }}</a>
                                                    <h3 class="title">
                                                        <a href="{{ path('app_project_detail', {'id':projet.id}) }}">{{ projet.institule }}</a>
                                                    </h3>
                                                    <ul class="info-list">
                                                        <li><a href="javascript:void(0)"><i class="lni lni-map-marker"></i> {{ projet.arrondissement.ville}}</a></li>
                                                        <li><a href="javascript:void(0)"> Region : {{projet.arrondissement.departement.region.nom}} CMR</a></li>
                                                    </ul>
                                                </div>
                                                <div class="bottom-content">
                                                    <p class="price">Estimation du cout: <span>{{ projet.couts }}</span></p>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- End Single Grid -->
                                    </div>
                            {% endfor%}

{#                            <div class="row">#}
{#                                <div class="col-12">#}
{#                                    <div class="pagination right">#}
{#                                        <ul class="pagination-list">#}
{#                                            {{ knp_pagination_render(projets) }}#}
{#                                        </ul>#}
{#                                    </div>#}
{#                                </div>#}
{#                            </div>#}
                        </div>
                    </div>
                {% endfor%}
            {% else%}
                <span class="text-center text-danger"> Aucun projet repertorié</span>
            {% endif %}
        </div>
    </section>
    <!-- /End Items Grid Area -->

    <!-- Start How Works Area -->
    <section class="how-works section" style="background-color: #fff;">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title">
                        <h2 class="wow fadeInUp" data-wow-delay=".4s">Comment proceder </h2>
                        <p class="wow fadeInUp" data-wow-delay=".6s"> Très facile et pratique, en juste 3 étapes.</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-4 col-12">
                    <!-- Start Single Work -->
                    <div class="single-work wow fadeInUp" data-wow-delay=".2s">
                        <span class="serial">01</span>
                        <h3>S'inscrire</h3>
                        <p> Authentifiez vous pour pouvoir avoir accès aux fonctionnalités de l'application.</p>
                    </div>
                    <!-- End Single Work -->
                </div>
                <div class="col-lg-4 col-md-4 col-12">
                    <!-- Start Single Work -->
                    <div class="single-work wow fadeInUp" data-wow-delay=".4s">
                        <span class="serial">02</span>
                        <h3>Choisir le secteur d'activité</h3>
                        <p>Nous mettons à votre disposition des acteurs d'activité diversifiés et porteur.</p>
                    </div>
                    <!-- End Single Work -->
                </div>
                <div class="col-lg-4 col-md-4 col-12">
                    <!-- Start Single Work -->
                    <div class="single-work wow fadeInUp" data-wow-delay=".6s">
                        <span class="serial">03</span>
                        <h3>Consulter les projets</h3>
                        <p>Les projets sont classés par secteur d'activité et en fonction de sa position geographique.</p>
                    </div>
                    <!-- End Single Work -->
                </div>
            </div>
        </div>
    </section>
    <!-- End How Works Area -->

{% endblock %}
