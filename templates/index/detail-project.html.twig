{% extends 'base.html.twig'%}

{% block title 'Details'%}
{% block body%}

    <div class="breadcrumbs">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="breadcrumbs-content">
                        <h1 class="page-title">Projet Detaillé</h1>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-12">
                    <ul class="breadcrumb-nav">
                        <li><a href="{{ path('app_index') }}">Home</a></li>
                        <li>Detail du projet {{ projet.id }}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <section class="item-details section">
        <div class="container">
            <div class="top-area">
                <div class="row">
                    <div class="col-lg-6 col-md-12 col-12">
                        <div class="product-images">
                            <main id="gallery">
                                <div class="main-img">
                                    {% for categorie in categories %}
                                        <img src="{{vich_uploader_asset(categorie) | imagine_filter('squared_thumbnail_medium')}}" id="current" alt="{{projet.secteur.imageName}}" width="auto" height="auto">
                                    {% endfor%}
                                </div>
{#                                <div class="images">#}
{#                                    <img src="assets/images/item-details/image1.jpg" class="img" alt="#">#}
{#                                    <img src="assets/images/item-details/image2.jpg" class="img" alt="#">#}
{#                                    <img src="assets/images/item-details/image3.jpg" class="img" alt="#">#}
{#                                    <img src="assets/images/item-details/image4.jpg" class="img" alt="#">#}
{#                                    <img src="assets/images/item-details/image5.jpg" class="img" alt="#">#}
{#                                </div>#}
                            </main>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 col-12">
                        <div class="product-info">
                            <h2 class="title">{{ projet.institule }}</h2>
                            <p class="location"><i class="lni lni-map-marker"></i><a href="javascript:void(0)">{{ projet.arrondissement.ville }}</a></p>
                            <span>Estimation du cout</span><br>
                            <h3 class="price">

                                {{ projet.couts }} FCFA
                            </h3>
                            <div class="list-info">
                                <h4>Informations</h4>
                                <ul>
                                    <li><span> Secteur:</span> {{projet.secteur.nomCategorie}}</li>
                                    <li><span>Maturite:</span> {{ projet.maturite.nomMaturite }}</li>
                                    {% if projet.statut%}
                                        <li><span>Statut:</span> {{ projet.statut.nom }}</li>
                                    {%else%}
                                        <li><span>Statut:</span> Indisponible</li>
                                    {% endif%}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="item-details-blocks">
                <div class="row">
                    <div class="col-lg-8 col-md-7 col-12">

                        <div class="single-block description">
                            <h3>Description</h3>
                            <p>
                                {{ projet.objectifs}}
                            </p>
{#                            <ul>#}
{#                                <li>Model: Apple MacBook Pro 13.3-Inch MYDA2</li>#}
{#                                <li>Apple M1 chip with 8-core CPU and 8-core GPU</li>#}
{#                                <li>8GB RAM</li>#}
{#                                <li>256GB SSD</li>#}
{#                                <li>13.3-inch 2560x1600 LED-backlit Retina Display</li>#}
{#                            </ul>#}
{#                            <p>The generated Lorem Ipsum is therefore always free from repetition, injected humour, or#}
{#                                non-characteristic words etc.</p>#}
                        </div>

                        <div class="single-block description">
                            <h3>Caractéristique de l'activité</h3>
                            <p>
                                {{ projet.caracteristique}}
                            </p>
                        </div>

                        <div class="single-block description">
                            <h3>Marché cibles</h3>
                            <p>
                                {{ projet.marche}}
                            </p>
                        </div>

                        <div class="single-block description">
                            <h3>Supply Chain</h3>
                            <p>
                                {{ projet.supply}}
                            </p>
                        </div>

                        <div class="single-block description">
                            <h3>Facteurs et atouts géographiques de production</h3>
                            <p>
                                {{ projet.atouts}}
                            </p>
                        </div>

                        <div class="single-block description">
                            <h3>Position sur le complexe des chaines de valeur ajoutée</h3>
                            <p>
                                {{ projet.valeurAjouter}}
                            </p>
                        </div>

                        <div class="single-block description">
                            <h3>Eligibilité au bénéfice des appuis et
                                arrangement de l’environnement
                                institutionnel
                            </h3>
                            <p>
                                {{ projet.eligibilite}}
                            </p>
                        </div>

                        <div class="single-block description">
                            <h3>Impact économique</h3>
                            <p>
                                {{ projet.resultats}}
                            </p>
                        </div>


                        <div class="single-block tags">
                            <h3>Autres infos</h3>
                            <ul>
                                {% if projet.maturite.eltMaturites|length > 0%}
                                    <span class="mb-2">Elements de maturite disponibles</span> <br>
                                    {% for elt in projet.maturite.eltMaturites%}
                                        <li><a href="javascript:void(0)">{{ elt.nom }}</a></li>
                                    {% endfor%}
                                {% else%}
                                    <li> <span class="">Aucunes informations pour le moment</span></li>
                                {% endif%}
                            </ul>
                        </div>

                    </div>
                    <div class="col-lg-4 col-md-5 col-12">
                        <div class="item-details-sidebar">

                            <div class="single-block author">
                                <h3>Publié par</h3>
                                <div class="content">
                                    {% for user in users%}
                                        <img src="{{user.photo ? vich_uploader_asset(photo) : asset('image/avatar.png') }}" alt="{{user.firstName}}">
                                        <h4>{{user.firstName}}</h4>
                                        <span>
                                            {% for role in user.roles %}
                                                {% if role == "ROLE_USER" %}
                                                    Utilisateur
                                                {% elseif role == "ROLE_ADMIN" %}
                                                    Administrateur
                                                {% endif %}
                                            {% endfor %}
                                        </span>
                                    {% endfor%}
                                </div>
                            </div>

                            <div class="single-block ">
                                <h3>Location</h3>
                                <div class="mapouter">
                                    <div class="gmap_canvas"><iframe width="100%" height="300" id="gmap_canvas" src="{{ mapUrl }}" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://putlocker-is.org"></a><br>
                                        <style>
                                            .mapouter {
                                                position: relative;
                                                text-align: right;
                                                height: 300px;
                                                width: 100%;
                                            }
                                        </style><a href="https://www.embedgooglemap.net">google map code for website</a>
                                        <style>
                                            .gmap_canvas {
                                                overflow: hidden;
                                                background: none !important;
                                                height: 300px;
                                                width: 100%;
                                            }
                                        </style>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


{%endblock%}