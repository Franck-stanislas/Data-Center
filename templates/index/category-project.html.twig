{% extends 'base.html.twig' %}

{% block title 'Projets|category' %}

{% block body %}

    <div class="breadcrumbs">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="breadcrumbs-content">
                        <h1 class="page-title">{{ categorie.nomCategorie }}</h1>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-12">
                    <ul class="breadcrumb-nav">
                        <li><a href="{{ path('app_index') }}">Home</a></li>
                        <li> <a href="{{path('categorie_list')}}"> Categories </a></li>
                        <li>{{ categorie.nomCategorie }}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Start Items Grid Area -->
    <section class="items-grid section custom-padding" style="padding-top: 100px">
        <div class="container">

            {% if projets|length > 0%}
                {% for row in projets|batch(9)%}
                    <div class="single-head">
                        <div class="row">
                            {% for projet in row%}
                                <div class="col-lg-4 col-md-6 col-12">
                                    <!-- Start Single Grid -->
                                    <div class="single-grid wow fadeInUp" data-wow-delay=".2s">
                                        <div class="content">
                                            <div class="top-content">
                                                <a href="javascript:void(0)" class="tag">{{ projet.secteur.nomCategorie }}</a>
                                                <h3 class="title">
                                                    <a href="{{ path('app_project_detail', {'id':projet.id}) }}">{{ projet.institule }}</a>
                                                </h3>
                                                <ul class="info-list">
                                                    <li><a href="javascript:void(0)"><i class="lni lni-map-marker"></i> {{ projet.arrondissement.ville}}</a></li>
                                                    <li><a href="javascript:void(0)"> Region : {{projet.arrondissement.departement.region.nom}} CMR</a></li>
                                                </ul>
                                            </div>
                                            <div class="bottom-content">
                                                <p class="price">Estimation du cout: <span>{{ projet.couts }} FCFA</span></p>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- End Single Grid -->
                                </div>
                            {% endfor%}

                            <div class="row">
                                <div class="col-12">
                                    <div class="pagination right">
                                        <ul class="pagination-list">
                                            {{ knp_pagination_render(projets) }}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor%}
            {% else%}
                <span class="text-center text-danger"> Aucun projet repertori√©</span>
            {% endif %}
        </div>
    </section>
    <!-- /End Items Grid Area -->

{% endblock %}
