{% extends 'admin/admin.base.html.twig' %}

{% block title 'Tableau d\'administration ' %}

{% block body %}
    <main class="content">

        {% include 'admin/layouts/admin.menu.html.twig' %}

        {{include('admin/layouts/navbar.html.twig')}}
        {{ form_start(form) }}
            <div class="row mt-6">
                <div class="col-12 col-xl-8">
                    <div class="card card-body border-0 shadow mb-4">
                        <h2 class="h5 mb-4">{%trans%}Informations Générales{%endtrans%}</h2>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div>
                                        <label for="first_name">{%trans%}Nom{%endtrans%}</label>
                                        {{form_widget(form.first_name )}}
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div>
                                        <label for="last_name">{%trans%}Prénom{%endtrans%}</label>
                                        {{form_widget(form.last_name )}}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        <label for="email">{%trans%}Email{%endtrans%}</label>
                                        {{form_widget(form.email )}}
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        <label for="phone">{%trans%}Téléphone{%endtrans%}</label>
                                        {{form_widget(form.phone )}}
                                    </div>
                                </div>

                            </div>

                        <div class="mt-3">
                            <button class="btn btn-gray-800 mt-2 animate-up-2" type="submit">
                                {{ button_label|default('Enregistrer') }}
                            </button>
                        </div>
                    </div>
                </div>
                    <div class="col-12 col-xl-4">
                        <div class="row">
                            <div class="col-12">
                                <div class="card card-body border-0 shadow mb-4">
                                    <h2 class="h5 mb-4">{%trans%}Choisir une photo de profil{%endtrans%}</h2>
                                    <div class="d-flex align-items-center">
                                        <div class="file-field">
                                            <div class="d-flex justify-content-xl-center ms-xl-3">
                                                <div class="d-flex">
                                                    {{form_row(form.image)}}
                                                    <div class="d-md-block text-left">
                                                        <div class="fw-normal text-dark mb-1">{%trans%}Changer Image{%endtrans%}</div>
                                                        <div class="text-gray small">{%trans%}JPG, GIF or PNG. Taille max de 800K{%endtrans%}</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        {{ form_end(form) }}
    </main>
{% endblock %}

