{% extends 'admin/admin.base.html.twig' %}

{% block title 'Tableau d\'administration ' %}

{% block body %}
<main class="content">

    {% include 'admin/layouts/admin.menu.html.twig' %}

    {{include('admin/layouts/navbar.html.twig')}}
    {{ form_start(form)}}
        <div class="row mt-6">
            <div class="col-12 col-xl-8">
                <div class="card card-body border-0 shadow mb-4">
                    <h2 class="h5 mb-4">Informations Générales</h2>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div>
                                    <label for="first_name">Nom</label>
                                    {{form_row(form.firstName )}}
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div>
                                    <label for="last_name">Prénom</label>
                                    {{form_row(form.lastName )}}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    {{form_row(form.email )}}
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    <label for="phone">Téléphone</label>
                                    {{form_row(form.phone)}}
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    <label for="phone">Rôles d'utilisateur</label>
                                    {{form_row(form.roles )}}
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    <label for="phone">Mot de passe</label>
                                    {{form_row(form.password )}}
                                </div>
                            </div>

                            <div class="mt-3">
                                <button class="btn btn-gray-800 mt-2 animate-up-2" type="submit">
                                    {{ button_label|default('Enregistrer') }}
                                </button>
                            </div>
                    </div>

                </div>
            </div>
            <div class="col-12 col-xl-4">
                <div class="row">
                    <div class="col-12">
                        <div class="card card-body border-0 shadow mb-4">
                            <h2 class="h5 mb-4">Choisir une photo de profil</h2>
                            <div class="d-flex align-items-center">
                                    <div class="me-3">
                                        <img class="rounded avatar-xl" src="{{users.photo ? vich_uploader_asset(users, 'image') : asset('image/avatar.png') }}" alt="change avatar">
                                    </div>
                                <div class="file-field">
                                    <div class="d-flex justify-content-xl-center ms-xl-3">
                                        <div class="d-flex">
                                            <svg class="icon text-gray-500 me-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M8 4a3 3 0 00-3 3v4a5 5 0 0010 0V7a1 1 0 112 0v4a7 7 0 11-14 0V7a5 5 0 0110 0v4a3 3 0 11-6 0V7a1 1 0 012 0v4a1 1 0 102 0V7a3 3 0 00-3-3z" clip-rule="evenodd"></path></svg>
                                            {{form_row(form.image)}}
                                            <div class="d-md-block text-left">
                                                <div class="fw-normal text-dark mb-1">Choisir une Image</div>
                                                <div class="text-gray small">JPG, GIF or PNG. Taille max de 800K</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
    {{include('admin/layouts/footer.html.twig')}}
</main>
{% endblock %}